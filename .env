# General settings
APP_NAME=nextcloud
DOMAIN=nextcloud.example.com
TIMEZONE=Europe/Moscow

# Namespaces
PRODUCTION_NAMESPACE=nextcloud-prod
BLUE_NAMESPACE=nextcloud-blue
GREEN_NAMESPACE=nextcloud-green

# Storage sizes
REDIS_STORAGE_SIZE=1Gi
POSTGRES_STORAGE_SIZE=10Gi
NEXTCLOUD_STORAGE_SIZE=20Gi

# Resource requests and limits
REDIS_CPU_REQUEST=100m
REDIS_CPU_LIMIT=500m
REDIS_MEMORY_REQUEST=128Mi
REDIS_MEMORY_LIMIT=512Mi

POSTGRES_CPU_REQUEST=500m
POSTGRES_CPU_LIMIT=2000m
POSTGRES_MEMORY_REQUEST=512Mi
POSTGRES_MEMORY_LIMIT=2Gi

NEXTCLOUD_CPU_REQUEST=1000m
NEXTCLOUD_CPU_LIMIT=4000m
NEXTCLOUD_MEMORY_REQUEST=1Gi
NEXTCLOUD_MEMORY_LIMIT=4Gi

# Database parameters
POSTGRES_DB=nextcloud
POSTGRES_USER=nextcloud
POSTGRES_PASSWORD=nextcloud
REDIS_PASSWORD=nextcloud

# Nextcloud parameters
NEXTCLOUD_ADMIN_USER=admin
NEXTCLOUD_ADMIN_PASSWORD=admin
NEXTCLOUD_TRUSTED_DOMAINS=nextcloud.example.com
NEXTCLOUD_OVERWRITEPROTOCOL=https
NEXTCLOUD_OVERWRITECLIURL=https://nextcloud.example.com
NEXTCLOUD_OVERWRITEHOST=nextcloud.example.com
NEXTCLOUD_OVERWRITEWEBROOT=/
NEXTCLOUD_OVERWRITECONDADDR=^10\.0\.0\.0/8$

# Cert Manager
CERT_MANAGER_ENABLED=true
CERT_MANAGER_ISSUER=letsencrypt-prod
CERT_MANAGER_EMAIL=admin@example.com

# GitHub Actions
HELM_VERSION=3.12.0
KUBECTL_VERSION=1.28.0 